---
/*
  Admin – Upload Methodology JSON
  Calls Python (Flask) backend via Nginx proxy
*/
---

<div class="page">
    <div class="card">
        <h1>Upload your file</h1>

        <form id="uploadForm">
            <label class="dropzone">
                <input
                    type="file"
                    name="file"
                    accept=".json,.xlsx,.xls,.csv"
                    required
                />
                <div class="icon"></div>

                <span>Drag and drop files here</span>
            </label>

            <p id="fileName" class="filename">No file selected</p>

            <button type="submit">Submit</button>

            <div id="status"></div>
        </form>
    </div>
</div>

<script>
  const form = document.getElementById("uploadForm");
  const status = document.getElementById("status");
  const button = form.querySelector("button");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const fileInput = form.querySelector('input[type="file"]');
    const file = fileInput.files[0];

    if (!file) {
      status.textContent = "Please select a file";
      return;
    }

    const ext = file.name.split(".").pop().toLowerCase();

    let endpoint = "";

    if (ext === "json") {
      endpoint = "/api/upload-methodology";
    } else if (["xlsx", "xls", "csv"].includes(ext)) {
      endpoint = "/api/upload-top-perfomers";
    } else {
      status.textContent = "Unsupported file type";
      return;
    }

    status.textContent = "Uploading…";
    button.disabled = true;

    const formData = new FormData();
    formData.append("file", file);

    try {
      const res = await fetch(endpoint, {
        method: "POST",
        body: formData
      });

      const data = await res.json();

      if (res.ok) {
        if (ext === "json") {
          status.textContent =
            `JSON uploaded (archived v${data.archived?.match(/\d+/)?.[0]})`;
        } else {
          status.textContent =
            `${ext.toUpperCase()} converted successfully`;
        }
        form.reset();
      } else {
        status.textContent = `${data.message || data.error}`;
      }
    } catch (err) {
      status.textContent = "Server not reachable";
    } finally {
      button.disabled = false;
    }
  });
  const fileInput = form.querySelector('input[type="file"]');
    const fileName = document.getElementById("fileName");

    fileInput.addEventListener("change", () => {
        if (fileInput.files.length > 0) {
            fileName.textContent = fileInput.files[0].name;
        } else {
            fileName.textContent = "No file selected";
        }
    });
</script>

<style>
    .page {
        min-height: 100vh;
        display: grid;
        place-items: center;
        background: #f6f8fc;
        font-family:
            system-ui,
            -apple-system,
            sans-serif;
    }

    .card {
        width: 380px;
        background: #fff;
        padding: 32px;
        border-radius: 14px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

    h1 {
        font-size: 26px;
        font-weight: 700;
        color: #2b2f5c;
        margin-bottom: 48px;
    }

    .dropzone {
        background: #f8faff;
        border-radius: 12px;
        padding: 46px 16px;
        cursor: pointer;
        margin-bottom: 24px;
    }

    .icon {
        width: 60px;
        height: 48px;
        margin: 10px auto 18px;
        background: #6c6af5;
        border-radius: 6px;
        position: relative;
    }

    .icon::before {
        content: "";
        position: absolute;
        top: -10px;
        left: 6px;
        width: 30px;
        height: 14px;
        background: #6c6af5;
        border-radius: 4px 4px 0 0;
    }

    .dropzone span {
        font-size: 14px;
        color: #a0a7c2;
    }

    input[type="file"] {
        display: none;
    }

    button {
        width: 100%;
        padding: 12px;
        background: #5b5af7;
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 26px;
    }

    button:disabled {
        background: #b5b8f7;
        cursor: not-allowed;
    }

    .filename {
        font-size: 13px;
        color: #6b7280;
        margin-top: 42px;
        margin-bottom: 18px;
        word-break: break-all;
    }

    #status {
        margin-top: 14px;
        font-size: 13px;
        color: #555;
    }
</style>
