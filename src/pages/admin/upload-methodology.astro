---
/*
  Admin – Upload Methodology JSON
  Calls Python (Flask) backend via Nginx proxy
*/
---

<div class="page">
  <div class="card">
    <div>
      <img src="/images/KiwaLogo.png" alt="Logo" width="100" />
    </div>
    <h1>Upload your file</h1>

    <form id="uploadForm">
      <label class="dropzone">
        <input
          type="file"
          name="file"
          accept=".json,.xlsx,.xls,.csv"
          required
        />
        <div class="file">
          <img src="/images/File_Upload.svg" alt="file_upload"/>
        </div>

        <span>Click to choose the file</span>
      </label>

      <p id="fileName" class="filename">No file selected</p>

      <button type="submit">Submit</button>

      <div id="status"></div>
    </form>
  </div>
</div>


<style>
  .page {
    min-height: 100vh;
    display: grid;
    place-items: center;
    background: #f6f8fc;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  .card {
    width: 380px;
    background: #fff;
    padding: 32px;
    border-radius: 14px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    text-align: center;
  }

  h1 {
    font-size: 26px;
    font-weight: 700;
    color: #2b2f5c;
    margin-bottom: 48px;
    margin-top: 26px;
  }

.dropzone {
  
  border-radius: 12px;
  padding: 20px 8px;
  cursor: pointer;
  margin-bottom: 24px;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 14px;
}


 .file img {
  width: 90px;
  height: auto;
  
}


  .dropzone span {
    font-size: 14px;
    color: #a0a7c2;
  }

  input[type="file"] {
    display: none;
  }

  button {
    width: 100%;
    padding: 12px;
    background: #3f51b5;
    color: #fff;
    border: none;
    border-radius: 10px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    margin-top: 26px;
  }

  button:disabled {
    background: #b5b8f7;
    cursor: not-allowed;
  }

  .filename {
    font-size: 13px;
    color: #6b7280;
    margin-top: 42px;
    margin-bottom: 18px;
    word-break: break-all;
  }

  #status {
    margin-top: 14px;
    font-size: 13px;
    color: #555;
  }
</style>


<script>
  const form = document.getElementById("uploadForm");
  const status = document.getElementById("status");
  const button = form.querySelector("button");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const fileInput = form.querySelector('input[type="file"]');
    const file = fileInput.files[0];

    if (!file) {
      status.textContent = "Please select a file";
      return;
    }

    const ext = file.name.split(".").pop().toLowerCase();

    let endpoint = "";

    if (ext === "json") {
      endpoint = "/api/upload-methodology";
    } else if (["xlsx", "xls", "csv"].includes(ext)) {
      endpoint = "/api/upload-top-perfomers";
    } else {
      status.textContent = "Unsupported file type";
      return;
    }

    status.textContent = "Uploading…";
    button.disabled = true;

    const formData = new FormData();
    formData.append("file", file);

    try {
      const res = await fetch(endpoint, {
        method: "POST",
        body: formData,
      });

      const data = await res.json();

      if (res.ok) {
        if (ext === "json") {
          status.textContent = `JSON uploaded (archived v${data.archived?.match(/\d+/)?.[0]})`;
        } else {
          status.textContent = `${ext.toUpperCase()} converted successfully`;
        }
        form.reset();
      } else {
        status.textContent = `${data.message || data.error}`;
      }
    } catch (err) {
      status.textContent = "Server not reachable";
    } finally {
      button.disabled = false;
    }
  });
  const fileInput = form.querySelector('input[type="file"]');
  const fileName = document.getElementById("fileName");

  fileInput.addEventListener("change", () => {
    if (fileInput.files.length > 0) {
      fileName.textContent = fileInput.files[0].name;
    } else {
      fileName.textContent = "No file selected";
    }
  });
</script>