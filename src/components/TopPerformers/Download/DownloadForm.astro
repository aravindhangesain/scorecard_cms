---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const t = lang === "zh" ? zh : en;
---

<section class="container">
  <!-- LEFT FORM -->
  <div>
    <h2>
      {t.download_form_heading} <br />
      {t.download_form_heading_span}
    </h2>

    <form class="kiwa-form">
      <div class="row">
        <div class="field">
          <label>
            {t.form_first_name_label}
            <span>{t.form_required_symbol}</span>
          </label>
          <input type="text" />
        </div>

        <div class="field">
          <label>
            {t.form_last_name_label}
            <span>{t.form_required_symbol}</span>
          </label>
          <input type="text" />
        </div>
      </div>

      <div class="field">
        <label>
          {t.form_email_label}
          <span>{t.form_required_symbol}</span>
        </label>
        <input type="email" />
      </div>

      <div class="consent-wrapper">
        <h2>{t.consent_heading}</h2>

        <label class="consent">
          <input type="checkbox" />
          <span>{t.consent_text}</span>
        </label>
      </div>

      <button type="submit" class="submit-btn">
        {t.form_submit_button}
      </button>
    </form>
  </div>

  <!-- RIGHT IMAGE -->
  <div class="image-wrapper">
    <img
      src="/images/Kiwa2025-CoverMockup-Enlish.webp"
      alt={t.form_image_alt}
    />
  </div>
</section>


<style>
 * {
  box-sizing: border-box;
  font-family: Inter, system-ui, -apple-system, BlinkMacSystemFont,
    "Segoe UI", Roboto, sans-serif;
}

body {
  margin: 0;
  background: #ffffff;
  color: #1a1a1a;
}

.container {
  max-width: 1200px;
  margin: auto;
  padding: 60px 20px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

/* Divider line below main heading */
.container > div > h2:first-of-type::after {
  content: "";
  display: block;
  width: 500px;
  height: 1px;
  background: #cfd8e3;
  margin-top: 25px;
}



/* Title */
h2 {
  font-size: 18px;
  line-height: 24px;
  color: #5a5b5e;
  font-family: "Work Sans", sans-serif;
  font-weight: 600;
  margin-bottom: 30px;
}

/* Form */
.kiwa-form {
  max-width: 500px;
}

.row {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
}

.field {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.field label {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: 6px;
  color: #5a5b5e;
  font-family: "Work Sans", sans-serif;
  line-height: 22px;
}

.field label span {
  color: #dc2626;
}

.field input {
  font-family: sans-serif;
  height: 50px;
  padding: 0 12px;
  border-radius: 4px;
  line-height: 1em;
  border: 2px transparent;
  border-color:#0054c4;
  background: rgba(7, 38, 67, 0.20);
  font-size: 14px;
  transition: all .2s ease;
  width: 100%;
  box-sizing: border-box;

}

.consent-wrapper {
  margin-top: 11px;
  margin-bottom: 24px;
}

.consent-wrapper h2 {
  font-size: 17px;
  color: #5a5b5e;
  margin-bottom: 12px;
  text-transform: uppercase;
  font-family: "Work Sans", sans-serif;
  font-weight: 600;
  line-height: 28px;
}

.consent {
  display: flex;
  align-items: flex-start;
  gap: 8px;
  font-size: 18px;        
  line-height: 1.4;      
  color: #6b6b6b;
  margin-top: 10px;
}

.consent input {
  margin-top: 4px;       
  flex-shrink: 0;
  font-size: 15px;
}

.consent span {
  display: block; 
  font-family: "Work Sans", sans-serif;
  font-weight: 400;
  line-height: 22px;
  color: #5a5b5e;
  font-size: 18px;
}



/* Button */
.submit-btn {
  width: 100%;
  height: 50px;
  background: #0054c5;
  color: #ffffff;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  font-family: "Work Sans", sans-serif;
  font-weight: 400;
  cursor: pointer;
  line-height: 19.2px;
}

.submit-btn:hover {
  background: #1f45a3;
}

/* Image */
.image-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 50px;
}

.image-wrapper img {
  max-width: 95%;
}

/* ========================= */
/* LARGE TABLETS & SMALL LAPTOPS (≤ 1024px) */
/* ========================= */
@media (max-width: 1024px) {
  .container {
    gap: 40px;
    padding: 48px 24px;
  }

  .container > div > h2:first-of-type::after {
    width: 100%;
  }

  .kiwa-form {
    max-width: 100%;
  }

  .image-wrapper {
    margin-top: 40px;
  }
}

/* ========================= */
/* TABLETS & MOBILE (≤ 768px) */
/* ========================= */
@media (max-width: 768px) {
  .container {
    grid-template-columns: 1fr;
    padding: 36px 20px;
  }

  .row {
    flex-direction: column;
    gap: 16px;
  }

  .image-wrapper {
    margin-top: 60px;
  }

  .image-wrapper img {
    max-width: 100%;
    height: auto;
  }
}

/* ========================= */
/* SMALL MOBILE DEVICES (≤ 480px) */
/* ========================= */
@media (max-width: 480px) {
  .container {
    padding: 28px 16px;
    gap: 32px;
  }

  .field label,
  .consent span {
    font-size: 16px;
  }

  .submit-btn {
    height: 46px;
    font-size: 15px;
  }

  .consent-wrapper h2 {
    font-size: 14px;
  }
}



</style>
