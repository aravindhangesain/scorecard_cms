---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section class="download-hero">
  <!-- Background image -->
  <img
    src="/images/methodology-hero-sub-banner.jpg"
    alt={data.download_hero_image_alt}
    class="download-hero-bg"
  />

  <!-- Blue overlay -->
  <div class="download-hero-overlay"></div>
  <!-- Content -->
  <div class="download-hero-content">
    <h1>
      {data.download_hero_heading_line_1}
      <br />
      {data.download_hero_heading_line_2}
      <br />
      {data.download_hero_heading_line_3}
      <br />
      <span class="span">{data.download_hero_heading_highlight}</span>
    </h1>

    <p>
      {data.download_hero_paragraph_1}
      <br /><br />
      {data.download_hero_paragraph_2}
      <br /><br />
      {data.download_hero_paragraph_3}
    </p>
  </div>
</section>

<style>
  /* Hero Section */
  .download-hero {
    position: relative;
    min-height: 550px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Background */
  .download-hero-bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Overlay */
  .download-hero-overlay {
    position: absolute;
    inset: 0;
    background: #0054c5;
    opacity: 0.5;
  }

  /* Content */
  .download-hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 0 0 100px;
    padding: 0 20px;
    color: #fff;
  }

  /* Heading */
  .download-hero-content h1 {
    font-family: "Azo Sans", sans-serif;
    font-weight: 300;
    font-size: 80px;
    /* unchanged */
    font-style: normal;
    letter-spacing: -1.5px;
    line-height: 94px;
    margin-top: 140px;
    color: #ffffff;
  }

  .download-hero-content h1 span {
    font-family: "Azo Sans", sans-serif;
    font-weight: 800;
    font-style: italic;
    color: #80ffca;
    line-height: 94px;
    letter-spacing: -1.5px;
  }

  /* Paragraph */
  .download-hero-content p {
    font-family: "Work Sans", sans-serif;
    font-weight: 400;
    max-width: 1150px;
    font-size: 17px;
    line-height: 28px;
    letter-spacing: 0.02em;
    margin-bottom: 50px;
    color: #ffffff;
  }

  @media (min-width: 1400px) {
    .download-hero-content {
      margin: 0 auto;
      padding-left: 0;
    }
  }

  /* ========================= */
  /* LARGE TABLETS & SMALL LAPTOPS (≤ 1200px) */
  /* ========================= */
  @media (max-width: 1200px) {
    .download-hero-content {
      margin-left: 60px;
    }
  }

  /* ========================= */
  /* TABLETS (≤ 1024px) */
  /* ========================= */
  @media (max-width: 1024px) {
    .download-hero {
      min-height: 480px;
    }

    .download-hero-content {
      margin-left: 40px;
    }

    .download-hero-content h1 {
      font-size: 64px;
      line-height: 76px;
      margin-top: 120px;
    }

    .download-hero-content h1 span {
      line-height: 76px;
    }

    .download-hero-content p {
      font-size: 16px;
      line-height: 26px;
    }
  }

  /* ========================= */
  /* MOBILE & SMALL TABLETS (≤ 768px) */
  /* ========================= */
  @media (max-width: 768px) {
    .download-hero {
      min-height: auto;
      padding: 80px 0 60px;
    }

    .download-hero-content {
      margin-left: 0;
      padding: 0 24px;
    }

    .download-hero-content h1 {
      font-size: 44px;
      line-height: 54px;
      margin-top: 0;
    }

    .download-hero-content h1 span {
      line-height: 54px;
    }

    .download-hero-content p {
      font-size: 15px;
      line-height: 24px;
      margin-bottom: 0;
    }
  }

  /* ========================= */
  /* SMALL MOBILE DEVICES (≤ 480px) */
  /* ========================= */
  @media (max-width: 480px) {
    .download-hero-content h1 {
      font-size: 34px;
      line-height: 42px;
    }

    .download-hero-content h1 span {
      line-height: 42px;
    }

    .download-hero-content p {
      font-size: 14px;
      line-height: 22px;
    }
  }
</style>
