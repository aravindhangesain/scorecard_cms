<script>
    const accordions = document.querySelectorAll(".accordion");

    accordions.forEach((accordion) => {
        const header = accordion.querySelector(".tp-header");
        const content = accordion.querySelector(".tp-content");
        const toggle = accordion.querySelector(".tp-toggle");

        // Set default open height
        if (header.getAttribute("aria-expanded") === "true") {
            content.style.maxHeight = content.scrollHeight + "px";
        }

        header.addEventListener("click", () => {
            const isOpen = header.getAttribute("aria-expanded") === "true";

            // Close all accordions first
            accordions.forEach((item) => {
                item.querySelector(".tp-header").setAttribute(
                    "aria-expanded",
                    "false",
                );
                item.querySelector(".tp-toggle").textContent = "+";
                item.querySelector(".tp-content").style.maxHeight = "0px";
            });

            // If it was closed, open it
            if (!isOpen) {
                header.setAttribute("aria-expanded", "true");
                toggle.textContent = "â€“";
                content.style.maxHeight = content.scrollHeight + "px";
            }
            // If it was open â†’ stays closed (this fixes your issue)
        });
    });

    // Common icon click handler
    document.addEventListener("click", (e) => {
        const icon = e.target.closest(".tp-icons img[data-link]");
        if (!icon) return;

        window.location.href = icon.dataset.link;
    });
