---
import { getLang } from "../../i18n/useLang";
import en from "../../i18n/ln.json";      // English
import zh from "../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
const cards = data.home_cards;
---


<section class="section">
  <!-- TITLE -->
  <div class="title-wrap">
    <h2 class="title">
      {data.home_key_year}
      <span class="keyspanclass">{data.home_key_text}</span>
    </h2>
  </div>

  <!-- CARDS -->
  {
    cards.map((card) => (
      <div class="card">
        <div class="card-content">
          <p class="card-heading">{card.heading}</p>
          <h4 class="top-card-heading-class">{card.title}</h4>
          <p>
            {card.text}
            {card.linkText && <a href={card.linkUrl}>{card.linkText}</a>}
            {card.textAfter}
          </p>
        </div>
        <img src={card.image} alt={card.alt} loading="lazy" />
      </div>
    ))
  }
</section>

