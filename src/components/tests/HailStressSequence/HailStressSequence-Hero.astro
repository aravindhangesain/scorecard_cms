---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const Data = lang === "zh" ? zh : en;
---
<section class="hero">
  <!-- Background image -->
  <img
    src="/images/Hail-Stress-Sequence-banner.jpg"
    alt={Data.hss_hero_alt}
    class="hero-bg"
  />

  <!-- Blue overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <h1>
      {Data.hss_hero_title} <br/>
      <span class="span">{Data.hss_hero_subtitle}</span>
    </h1>
    <p>{Data.hss_hero_description}</p>
  </div>
</section>

