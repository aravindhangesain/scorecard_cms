---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json"; // English
import zh from "../../../i18n/ln-eg.json"; // Chinese

const lang = getLang(Astro);
const Data = lang === "zh" ? zh : en;
const isZh = lang === "zh";
---

<section id="PowerDegration" class="Hail-boms">
  <div class="Hail-boms-container">
    <!-- LEFT SIDE -->
    <div class="Hail-boms-left">
      <h2>
        {Data.hss_power_title}<br />
        <span>{Data.hss_power_span}</span>
      </h2>

      <div class="chart-wrapper">
        <img
          src="/images/hss.jpg"
          alt={Data.hss_power_hail_bom_left_alt}
          class="modal-trigger"
          title={Data.hss_power_hail_bom_left_title}
        />
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <a
      href={isZh
        ? "/zh/top-performers/?pqp_test=HSS"
        : "/top-performers/?pqp_test=HSS"}
      class="hss-boms-link"
    >
      <div class="Hail-boms-right">
        <img
          class="badge-img"
          src="/images/Kiwa-PVEL-2025-TP-Mark-2.svg"
          alt={Data.hss_power_hail_bom_right_alt}
        />

        <div class="cta">
          <h4>
            {Data.hss_power_cta_heading}<br />
            {Data.hss_power_cta_heading1}
          </h4>
          <p>{Data.hss_power_cta_paragraph}</p>
        </div>
      </div>
    </a>

    <div>
      <p class="footnote-left">
        {Data.hss_power_footnote}
      </p>

      <a
        href={Data.hss_power_footnote_link_url}
        target="_blank"
        class="text-link"
      >
        {Data.hss_power_footnote_link_text}
      </a>
    </div>

    <!-- FULL WIDTH FOOTNOTE ROW -->
    <div class="footnote-row">
      <a class="footnote" href={Data.hss_power_link_url} target="_blank">
        {Data.hss_power_link_text}
      </a>

      <img class="cta-arrow" src="/images/Icon_Arrow_Black.svg" />
    </div>
  </div>
</section>

<style>
  .Hail-boms {
    padding: clamp(3rem, 6vw, 5rem) 1.5rem;
    background: #ffffff;
  }

  .Hail-boms-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2.2fr 0.8fr;
    gap: clamp(2rem, 3vw, 5rem);
    align-items: start;
  }

  .Hail-boms-left h2 {
    font-size: 46.8px;
    line-height: 57.8px;
    color: #072643;
    margin-bottom: 2rem;
    font-family: "Azo Sans" sans-serif;
    font-weight: 400;
    text-align: left;
    letter-spacing: -1.5px;
  }

  .Hail-boms-left h2 span {
    font-weight: 800;
    font-family: "Azo Sans" sans-serif;
    font-style: italic;
  }

  .chart-wrapper img {
    width: 100%;
    display: block;
  }

  .hss-boms-link {
    display: contents;
    text-decoration: none;
    color: inherit;
  }

  /* Footnotes */
  .footnote-left {
    font-size: 12px;
    color: #072643;
    line-height: 18px;
    font-family: "Work Sans", sans-serif;
    font-weight: 400;
  }

  .footnote-row {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .footnote-row .footnote {
    font-size: 14px;
    max-width: 85%;
    line-height: 18px;
    letter-spacing: normal;
    font-family: "Work Sans", sans-serif;
    color: #072643;
    text-decoration: none;
    position: relative;
    display: inline-block;
    text-align: left;
  }

  .Hail-boms-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 190px;
  }

  .badge-img {
    width: clamp(180px, 25vw, 240px);
    height: auto;
    /* margin-bottom: 2rem; */
  }

  .cta h4 {
    font-size: 24px;
    color: #282828;
    letter-spacing: -1.5px;
    margin-bottom: 1rem;
    line-height: 32px;
    font-family: "Azo Sans", sans-serif;
    font-weight: 400;
    text-align: center;
  }

  .cta p {
    font-size: 16px;
    color: #282828;
    font-weight: 400;
    max-width: 200px;
    line-height: 28px;
    font-family: "Work Sans", sans-serif;
    text-align: center;
    margin: 0 auto;
  }

  .text-link {
    color: #072643;
    text-decoration: none;
    font-style: italic;
    font-weight: 400;
    font-size: 14px;
    font-family: "Work Sans", sans-serif;
    margin-top: 20px;
    padding-bottom: 4px;

    line-height: 21px;
    /* underline using background */
    background-image: linear-gradient(#072643, #072643);
    background-repeat: no-repeat;
    background-size: 100% 1.5px;
    background-position: 100% 100%;

    transition: background-size 0.4s ease;
  }

  /* hover: underline disappears left â†’ right */
  .text-link:hover {
    background-size: 0% 1.5px;
  }

  /* Keep arrow size fixed */
  .footnote-row img.cta-arrow {
    width: 60px; /* keep original size */
    height: auto;
    transition: transform 0.3s ease;
  }

  /* Slide on hover */
  .footnote-row:hover img.cta-arrow {
    transform: translateX(8px);
  }

  /* Click feedback */
  .footnote-row:active img.cta-arrow {
    transform: translateX(12px);
  }

  @keyframes arrowSlide {
    0% {
      transform: translateX(0);
    }
    60% {
      transform: translateX(12px);
    }
    100% {
      transform: translateX(8px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .footnote-row img.cta-arrow {
      transition: none;
      animation: none;
    }
  }

  @media (max-width: 1024px) {
    .Hail-boms-container {
      grid-template-columns: 1fr;
    }

    .Hail-boms-right {
      margin-top: 3rem;
    }

    .footnote-row .footnote {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .Hail-boms {
      padding: 3rem 1.25rem;
    }

    .Hail-boms-left h2 {
      text-align: left;
    }

    .Hail-boms-right {
      margin-top: 2.5rem;
    }

    .cta p {
      max-width: 100%;
    }

    .footnote-row {
      flex-direction: column;
      align-items: flex-start;
    }

    .arrow-link {
      align-self: flex-end;
    }
  }

  @media (max-width: 480px) {
    .Hail-boms-left h2 {
      font-size: 28px;
    }

    .badge-img {
      width: 160px;
    }
  }

  /* Cursor */
  .modal-trigger {
    cursor: pointer;
  }
</style>
