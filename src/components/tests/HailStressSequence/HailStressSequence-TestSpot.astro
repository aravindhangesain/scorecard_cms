---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const Data = lang === "zh" ? zh : en;
---

<section id="TestSpotlight" class="Hail-spotlight">
    <div class="Hail-container">
        <!-- HEADER -->
        <div class="Hail-header">
            <div class="Hail-title">
                <h2>{Data.hss_spotlight_title}<br />
                    <span>{Data.hss_spotlight_span}</span>
                </h2>
            </div>

            <div class="Hail-description">
                <p>
                    {Data.hss_spotlight_paragraph_1}
                </p>
            </div>
        </div>
        <div class="Hail-cards">
            <div class="Hail-card">
                <div class="Hail-card-image">
                    <img
                        src="/images/Hail-Test-Results.jpg"
                        alt={Data.hss_spotlight_alt}
                        class="modal-trigger"
                    />
                </div>

                <p class="Hail-card-caption">
                    {Data.hss_spotlight_paragraph_2}
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    .Hail-spotlight {
        padding: clamp(40px, 6vw, 80px) 20px;
        background: #ffffff;
    }

    .Hail-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .Hail-header {
        display: grid;
        grid-template-columns: 1fr 1.9fr;
        gap: 40px;
        margin-bottom: clamp(20px, 4vw, 40px);
    }

    .Hail-title h2 {
        font-size: 46.8px;
        font-weight: 400;
        line-height: 1.2;
        color: #072643;
        font-family: "Azo Sans" sans-serif;
    }

    .Hail-title span {
        font-weight: 800;
        font-style: italic;
        font-family: "Azo Sans" sans-serif;
    }

    .Hail-description p {
        font-size: clamp(15px, 2vw, 16px);
        line-height: 1.8;
        color: #072643;
        font-family: "Work Sans", sans-serif;
        letter-spacing: 0.01em;
        font-weight: 400;
    }

    .Hail-cards {
        display: flex;
        justify-content: center;
    }

    .Hail-card {
        width: 100%;
        max-width: 1000px;
        text-align: center;
    }

    .Hail-card-image {
        display: flex;
        justify-content: center;
        margin-bottom: clamp(8px, 2vw, 16px);
    }

    .Hail-card-image img {
        width: 100%;
        max-width: 800px;
        height: auto;
        border-radius: 4px;
    }

    .Hail-card-caption {
        font-size: 14px;
        line-height: 1.6;
        color: #072643;
        max-width: 900px;
        margin: 0 auto;
        font-family: "Work Sans" sans-serif;
        font-weight: 400;
    }

    @media (max-width: 1024px) {
        .Hail-header {
            grid-template-columns: 1fr;
            gap: 24px;
        }
    }

    @media (max-width: 768px) {
        .Hail-header {
            text-align: left;
        }

        .Hail-card-caption {
            max-width: 100%;
        }
    }

    @media (max-width: 480px) {
        .Hail-title h2 {
            font-size: 28px;
        }

        .Hail-description p {
            font-size: 14px;
        }

        .Hail-card-caption {
            font-size: 13px;
        }
    }

    /* Cursor */
    .modal-trigger {
        cursor: pointer;
    }
</style>
