---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section class="hero">
  <img
    src="/images/Incidence-Angle-Modifier-1.jpg"
    alt={data.iam_hero_title}
    class="hero-bg"
  />

  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1>
      {data.iam_hero_title} <br/>
      <span class="span">{data.iam_hero_span}</span>
    </h1>
    <p>
      {data.iam_hero_description}
    </p>
  </div>
</section>


