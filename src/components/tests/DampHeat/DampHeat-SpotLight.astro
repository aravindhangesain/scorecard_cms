---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---


<section id="TestSpotlight" class="dh-spotlight">
  <div class="dh-container">

    <!-- HEADER -->
    <div class="dh-header">
      <div class="dh-title">
        <h2>
          {data.dhspotlightheader_title1}<br />
          <span style={`font-style:${data.dhspotlightheader_title2style}`}>
            {data.dhspotlightheader_title2}
          </span>
        </h2>
      </div>

      <div class="dh-description">
        <p>
          {data.dhspotlightheader_description}
        </p>
      </div>
    </div> 
  <div class="dh-cards">

    <div class="dh-card">
      <div class="dh-card-header">
        <h3>{data.dhspotlightcard_stage1}</h3>
        <p>
          {data.dhspotlightcard_description1}
        </p>
      </div>
      <div class="dh-card-image">
        <img src="/images/EN-DC-1.png" alt={data.dhspotlightcardimage_alt1} class="modal-trigger" />
      </div>
    </div>

    <div class="dh-card">
      <div class="dh-card-header">
        <h3>{data.dhspotlightcard_stage2}</h3>
        <p>
          {data.dhspotlightcard_description2}
        </p>
      </div>
      <div class="dh-card-image">
        <img src="/images/EN-DC-2.png" alt={data.dhspotlightcardimage_alt2} class="modal-trigger" />
      </div>
    </div>

    <div class="dh-card">
      <div class="dh-card-header">
        <h3>{data.dhspotlightcard_stage3}</h3>
        <p>
          {data.dhspotlightcard_description3}
        </p>
      </div>
      <div class="dh-card-image">
        <img src="/images/EN-DC-3.png" alt={data.dhspotlightcardimage_alt3} class="modal-trigger" />
      </div>
  </div>

</div>

</section>


<style>

  .dh-spotlight {
  padding: clamp(40px, 6vw, 80px) 20px;
  background: #ffffff;
}

.dh-container {
  max-width: 1200px;
  margin: 0 auto;
}



.dh-header {
  display: grid;
  grid-template-columns: 1fr 1.9fr;
  gap: 40px;
  margin-bottom: clamp(40px, 6vw, 80px);
}

.dh-title h2 {
  font-size: 46.8px;
  line-height: 1.2;
  color: #072643;
  font-family: "Azo Sans", sans-serif;
  font-weight: 400;
}

.dh-title span {
  font-weight: 800;
  font-family: "Azo Sans", sans-serif;
  font-style: italic;
}

.dh-description p {
  font-size: 16px;
  line-height: 28px;
  color: #072643;
  font-family: "Work Sans", sans-serif;
  letter-spacing: 0.01em;
  font-family: 400;
}



.dh-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: clamp(20px, 4vw, 30px);
  max-width: 900px;
}

.dh-card {
  border: 1px solid #dcdcdc;
  background: #ffffff;
  display: flex;
  flex-direction: column;
}

/* Card Header */
.dh-card-header {
  background: #0a2b4f;
  color: #ffffff;
  padding: 10px;
  min-height: 190px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}

.dh-card-header h3 {
  font-size: 24px;
  font-weight: 400;
  margin-bottom: 10px;
  font-family: "Azo Sans", sans-serif;
}

.dh-card-header p {
  font-size: 16px;
  line-height: 1.6;
  letter-spacing:0.01em;
  text-align: center;
  font-family: "Work Sans", sans-serif;
}


.dh-card-image img {
  width: 100%;
  display: block;
}



@media (max-width: 1024px) {
  .dh-header {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .dh-cards {
    grid-template-columns: repeat(2, 1fr);
    max-width: 100%;
  }

  .dh-card-header {
    min-height: 140px;
  }
}



@media (max-width: 768px) {
  .dh-header {
    text-align: left;
  }

  .dh-cards {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .dh-card-header {
    min-height: auto;
    padding: 20px 16px;
  }

  .dh-description p {
    font-size: 14px;
    text-align: left;
  }
}



@media (max-width: 480px) {
  .dh-title h2 {
    font-size: 28px;
    text-align: left;
  }

  .dh-description p {
    font-size: 14px;
  }
  }

  /* Cursor */
  .modal-trigger {
    cursor: pointer;
  }

</style>
