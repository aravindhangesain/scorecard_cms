---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json"; // English
import zh from "../../../i18n/ln-eg.json"; // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;

const cardImages = [
    "/images/Key-Takeaways-1.jpg",
    "/images/key_takewaway_2.jpg",
    "/images/key_takewaway_3.jpg",
    "/images/Key-Takeaways-4.jpg",
];
---

<section class="section">
    <div class="test-title-wrap">
        <h1 class="tests-title">
            <span class="keyspanclass1">
                <span class="light-word">{data.tc_takeaways_title1}</span>
                {data.tc_takeaways_title2}
            </span>
        </h1>
    </div>

    {
        data.fail_cards.map((card, index) => (
            <div class="card">
                <div class="card-content">
                    <p class="card-heading">{card.heading}</p>

                    <b class="top-card-heading-class">{card.title}</b>

                    <p>{card.text}</p>
                </div>

                <img src={cardImages[index]} alt={card.alt} loading="lazy" />
            </div>
        ))
    }
</section>
