---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section class="tc-spotlight">
  <div class="tc-container">
    <div class="tc-content">
      <h2>
        {data.tc_spotlight_title}<br />
        <span>{data.tc_spotlight_span}</span>
      </h2>

      <p>
        {data.tc_spotlight_p1}
      </p>

      <p>
        {data.tc_spotlight_p2}
      </p>
    </div>

    <div class="tc-image">
      <img
        src="/images/TC600-2.png"
        alt={data.tc_spotlight_img_title}
        class="modal-trigger"
        title={data.tc_spotlight_img_alt}
      />
      <div class="desc">
        <h3>{data.tc_spotlight_img_title}</h3>
        <p>
          {data.tc_spotlight_img_desc}
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  /* --- Main Layout --- */
  .tc-spotlight {
    padding: 2.5rem 100px;
    background: #ffffff;
  }

  .tc-container {
   
    max-width: 1200px; 
    
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap; 
    align-items: stretch; 
    gap: 40px; 
  }

  /* --- Left Content --- */
  .tc-content {
    flex: 1 1 500px; 
    min-width: 0; 
  }

  .tc-content h2 {
    font-family: "Azo Sans", sans-serif;
    font-size: 52px;
    line-height: 1.1;
    color: #0b2a4a;
    margin-bottom: 1.25rem;
    font-weight: 400;
    letter-spacing: -0.5px;
    margin-top: 0; 
  }

  .tc-content h2 span {
    font-family: "Azo Sans", sans-serif;
    font-weight: 800;
    font-style: italic;
    display: block;
    margin-top: 0.2rem;
    color: #0b2a4a;
  }

  .tc-content p {
    font-family: "WorkSans-Regular", "Work Sans", sans-serif;
    font-size: 16px;
    line-height: 1.8;
    color: rgb(7, 38, 67);
    margin-bottom: 1rem;
    font-weight: 400;
    max-width: 100%;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* --- Right Image Section --- */
  .tc-image {
    flex: 1 1 500px; 
    display: flex;
    flex-direction: column;
  }

  .tc-image img {
    width: 100%;
    aspect-ratio: 960 / 519;
    height: auto; 
    flex-grow: 1; 
    object-fit: cover;
    cursor: pointer;
    display: block;
    border-radius: 4px 4px 0 0;
  }

  /* --- Blue Caption Box --- */
  .desc {
    background: #0b2a4a;
    color: #ffffff;
    padding: 25px;
    font-family: "AzoSans-Regular", "Azo Sans", sans-serif;
    border-radius: 0 0 4px 4px;
    flex-shrink: 0; 
  }

  .desc h3 {
    font-family: "AzoSans-Regular", "Azo Sans", sans-serif;
    font-size: 24px;
    font-weight: 400;
    margin: 0 0 10px 0;
    color: #ffffff;
    line-height: 1.2;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .desc p {
    font-family: "AzoSans-Regular", "Azo Sans", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
    color: #ffffff;
    font-weight: 300;
    opacity: 0.9;
  }

  .modal-trigger {
    cursor: pointer;
  }

  /* =========================
     RESPONSIVE FIXES
  ========================= */
  
  /* OPTIONAL: Extra Large Screens (e.g. 1920px monitors) 
     If you want even MORE space on huge screens, you can increase padding here */
  @media (min-width: 1600px) {
    .tc-spotlight {
        padding: 2.5rem 150px; 
    }
  }

  /* Laptop */
  @media (max-width: 1024px) {
    .tc-spotlight {
      padding: 2.5rem 50px;
    }
  }

  /* Tablet / Mobile */
  @media (max-width: 768px) {
    .tc-spotlight {
      padding: 2rem 20px;
    }
    .tc-content h2 {
      font-size: 36px;
    }
  }
</style>
