---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json"; // English
import zh from "../../../i18n/ln-eg.json"; // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
const isZh = lang === "zh";
---

<section id="PowerDegration" class="tc-boms">
  <div class="tc-boms-container">
    <!-- LEFT SIDE -->
    <div class="tc-boms-left">
      <h2>
        {data.tc_power_degradation}<br />
        <span>{data.tc_power_degradation_sub}</span>
      </h2>

      <div class="chart-wrapper">
        <img
          src="/images/tc-600.jpg"
          alt={data.tc_power_degradation_image_alt}
          class="modal-trigger"
          title={data.tc_power_degradation_image_title}
        />
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <a
      href={isZh
        ? "/zh/top-performers/?pqp_test=TC"
        : "/top-performers/?pqp_test=TC"}
      class="tc-boms-link"
    >
      <div class="tc-boms-right">
        <img
          class="badge-img"
          src="/images/Kiwa-PVEL-2025-TP-Mark-2.svg"
          alt={data.tc_power_degradation_image_alt_2}
        />

        <div class="cta">
          <h4>
            {data.tc_power_degradation_link}
            <br />
            {data.tc_power_degradation_link_sub}
          </h4>
          <p>{data.tc_power_degradation_link_text}</p>
        </div>
      </div>
    </a>

    <div>
      <p class="footnote-left">
        {data.tc_power_degradation_footnote}
      </p>

      <a
        href={data.tc_power_degradation_link_text_2_url}
        target="_blank"
        class="text-link"
      >
        {data.tc_power_degradation_link_text_2}
      </a>
    </div>

    <!-- FULL WIDTH FOOTNOTE ROW -->
    <div class="footnote-row">
      <a
        class="footnote"
        href={data.tc_power_degradation_link_url}
        target="_blank"
      >
        {data.tc_power_degradation_link_text_3}
      </a>

      <img class="cta-arrow" src="/images/Icon_Arrow_Black.svg" />
    </div>
  </div>
</section>

<style>
  .tc-boms {
    padding: 5rem 2rem;
    background: #ffffff;
  }

  .tc-boms-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2.2fr 0.8fr;
    gap: 2rem;
    align-items: start;
  }

  .tc-boms-left h2 {
    font-size: 46.8px;
    line-height: 57.8px;
    color: #072643;
    margin-bottom: 2rem;
    font-family: "Azo Sans" sans-serif;
    font-weight: 400;
    text-align: left;
    letter-spacing: -1.5px;
  }

  .tc-boms-left h2 span {
    font-weight: 800;
    font-family: "Azo Sans" sans-serif;
    font-style: italic;
  }

  .chart-wrapper img {
    width: 100%;
    display: block;
    margin-bottom: 1.5rem;
  }

  .tc-boms-link {
    display: contents; /* anchor disappears visually */
    text-decoration: none;
    color: inherit;
  }

  .footnote-left {
    font-size: 12px;
    color: #072643;
    line-height: 18px;
    font-family: "Work Sans", sans-serif;
    font-weight: 400;
  }

  .footnote {
    font-size: 0.9rem;
    color: #072643;
    line-height: 1.6;
    text-decoration: none;
  }

  /* .text-link {
    position: relative;
    display: inline-block;
    color: #072643;
    text-decoration: none;
    margin-top: 20px;
    font-style: italic;
    font-weight: 400;
    font-size: 14px;
    font-family: "Work Sans", sans-serif;
    letter-spacing: normal;
    text-align: left;
    line-height: 21px;
  } */

  .text-link {
    color: #072643;
    text-decoration: none;
    font-style: italic;
    font-weight: 400;
    font-size: 14px;
    font-family: "Work Sans", sans-serif;
    margin-top: 20px;
    padding-bottom: 4px;

    line-height: 21px;
    /* underline using background */
    background-image: linear-gradient(#072643, #072643);
    background-repeat: no-repeat;
    background-size: 100% 1.5px;
    background-position: 100% 100%;

    transition: background-size 0.4s ease;
  }

  /* hover: underline disappears left â†’ right */
  .text-link:hover {
    background-size: 0% 1.5px;
  }

 
  .footnote-row {
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .footnote-row .footnote {
    margin: 0;
    max-width: 85%;
    color: #072643;
    font-family: "Work Sans", sans-serif;
    font-size: 14px;
    line-height: 18px;
    letter-spacing: normal;
    text-align: left;
    font-weight: 400;
  }

  .tc-boms-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* text-align: center; */
    margin-top: 180px;
  }

  .badge-img {
    width: 240px;
    height: auto;
  }

  .cta h4 {
    font-size: 24px;
    color: #282828;
    letter-spacing: -1.5px;
    margin-bottom: 1rem;
    line-height: 32px;
    font-weight: 400;
    font-family: "Azo Sans", sans-serif;
    text-align: center;
  }

  .cta p {
    font-size: 16px;
    color: #282828;
    font-weight: 400;
    max-width: 200px;
    line-height: 28px;
    font-family: "Work Sans", sans-serif;
    text-align: center;
  }

  /* Keep arrow size fixed */
  .footnote-row img.cta-arrow {
    width: 60px; /* keep original size */
    height: auto;
    transition: transform 0.3s ease;
  }

  /* Slide on hover */
  .footnote-row:hover img.cta-arrow {
    transform: translateX(8px);
  }

  /* Click feedback */
  .footnote-row:active img.cta-arrow {
    transform: translateX(12px);
  }

  @keyframes arrowSlide {
    0% {
      transform: translateX(0);
    }
    60% {
      transform: translateX(12px);
    }
    100% {
      transform: translateX(8px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .footnote-row img.cta-arrow {
      transition: none;
      animation: none;
    }
  }

  @media (max-width: 1024px) {
    .tc-boms-container {
      grid-template-columns: 1fr;
    }

    .tc-boms-right {
      margin-top: 3rem;
    }

    .badge-img {
      width: 200px;
    }

    .cta p {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .tc-boms {
      padding: 3rem 1.5rem;
    }

    .tc-boms-left h2 {
      font-size: 34px;
      line-height: 42px;
    }

    .tc-boms-right {
      margin-top: 2.5rem;
    }

    .badge-img {
      width: 180px;
      margin-bottom: 2rem;
    }

    .footnote-row {
      position: relative;
      padding-right: 2rem;
    }

    .footnote-row .footnote {
      max-width: 100%;
      padding-right: 2rem;
    }

    .arrow-link {
      position: absolute;
      right: 0;
      top: 50%;
      transform: translateY(-50%);
      font-size: 20px;
      line-height: 1;
    }
  }

  @media (max-width: 480px) {
    .tc-boms-left h2 {
      font-size: 28px;
      line-height: 36px;
    }

    .badge-img {
      width: 160px;
    }

    .cta h4 {
      font-size: 1.3rem;
    }

    .cta p {
      font-size: 0.95rem;
    }

    .footnote-left,
    .footnote {
      font-size: 13px;
    }
    .arrow-link {
      font-size: 18px;
    }
  }

  .modal-trigger {
    cursor: pointer;
  }
</style>
