---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json"; // English
import zh from "../../../i18n/ln-eg.json"; // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
const isZh = lang === "zh";
---

<section id="PowerDegration" class="Lid-boms">
    <div class="Lid-boms-container">
        <!-- LEFT SIDE -->
        <div class="Lid-boms-left">
            <h2>
                {data.lid_boms_title}<br />
                <span>{data.lid_boms_cta_title_span}</span>
            </h2>

            <div class="chart-wrapper">
                <img
                    src="/images/LIDLETID-Power-Degration.jpg"
                    alt={data.lid_boms_chart_image_alt}
                    class="modal-trigger"
                    title={data.lid_boms_chart_image_title}
                />
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <a
            href={isZh
                ? "/zh/top-performers/?pqp_test=LID"
                : "/top-performers/?pqp_test=LID"}
            class="lid-boms-link"
        >
            <div class="Lid-boms-right">
                <img
                    class="badge-img"
                    src="/images/Kiwa-PVEL-2025-TP-Mark-2.svg"
                    alt={data.lid_boms_badge_image_alt}
                />

                <div class="cta">
                    <h4>
                        {data.lid_boms_cta_title}
                        <br />
                        {data.lid_boms_cta_title_span}
                    </h4>
                    <p>
                        {data.lid_boms_cta_description}
                    </p>
                </div>
            </div>
        </a>

        <div>
            <p class="footnote-left">
                {data.lid_boms_footnote_left}
            </p>

            <a
                href={data.lid_boms_boxplot_link}
                target="_blank"
                class="text-link"
            >
                {data.lid_boms_boxplot_link_text}
            </a>
        </div>

        <!-- FULL WIDTH FOOTNOTE ROW -->
        <div class="footnote-row">
            <a
                class="footnote"
                href={data.lid_boms_external_link}
                target="_blank"
            >
                {data.lid_boms_external_link_text}
            </a>

            <img class="cta-arrow" src="/images/Icon_Arrow_Black.svg" />
        </div>
    </div>
</section>

<style>
    .Lid-boms {
        padding: clamp(3rem, 6vw, 5rem) 1.5rem;
        background: #ffffff;
    }

    .Lid-boms-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 2.2fr 0.8fr;
        gap: clamp(2rem, 3vw, 5rem);
        align-items: start;
    }

    .Lid-boms-left h2 {
        font-size: 46.8px;
        line-height: 57.8px;
        color: #072643;
        margin-bottom: 2rem;
        font-family: "Azo Sans" sans-serif;
        font-weight: 400;
        text-align: left;
        letter-spacing: -1.5px;
    }

    .Lid-boms-left h2 span {
        font-weight: 800;
        font-family: "Azo Sans" sans-serif;
        font-style: italic;
    }

    .chart-wrapper img {
        width: 100%;
        display: block;
    }

    .lid-boms-link {
        display: contents;
        text-decoration: none;
        color: inherit;
    }

    /* Footnotes */
    .footnote-left {
        font-size: 12px;
        color: #072643;
        line-height: 18px;
        letter-spacing: 0.5px;
        margin-bottom: 15px;
        font-family: "Work Sans", sans-serif;
        font-weight: 400;
        width: 85%;
    }

    .footnote-row {
        grid-column: 1 / -1;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .footnote-row .footnote {
        font-size: 14px;
        max-width: 85%;
        line-height: 18px;
        letter-spacing: normal;
        font-family: "Work Sans", sans-serif;
        color: #072643;
        text-decoration: none;
        position: relative;
        display: inline-block;
        text-align: left;
    }

    .Lid-boms-right {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-top: 150px;
    }

    .badge-img {
        width: clamp(180px, 25vw, 240px);
        height: auto;
        /* margin-bottom: 2rem; */
    }

    .cta h4 {
        font-size: 24px;
        color: #282828;
        letter-spacing: -1.5px;
        margin-bottom: 1rem;
        line-height: 32px;
        font-family: "Azo Sans", sans-serif;
        font-weight: 400;
        text-align: center;
    }

    .cta p {
        font-size: 16px;
        color: #282828;
        font-weight: 400;
        max-width: 200px;
        line-height: 28px;
        font-family: "Work Sans", sans-serif;
        text-align: center;
        margin: 0 auto;
    }

    .text-link {
        color: #072643;
        text-decoration: none;
        font-style: italic;
        font-weight: 400;
        font-size: 14px;
        font-family: "Work Sans", sans-serif;
        margin-top: 20px;

        line-height: 21px;
        padding-bottom: 4px;
        /* underline using background */
        background-image: linear-gradient(#072643, #072643);
        background-repeat: no-repeat;
        background-size: 100% 1.5px;
        background-position: 100% 100%;

        transition: background-size 0.4s ease;
    }

    /* hover: underline disappears left â†’ right */
    .text-link:hover {
        background-size: 0% 1.5px;
    }

    /* Keep arrow size fixed */
    .footnote-row img.cta-arrow {
        width: 60px; /* keep original size */
        height: auto;
        transition: transform 0.3s ease;
    }

    /* Slide on hover */
    .footnote-row:hover img.cta-arrow {
        transform: translateX(8px);
    }

    /* Click feedback */
    .footnote-row:active img.cta-arrow {
        transform: translateX(12px);
    }

    @keyframes arrowSlide {
        0% {
            transform: translateX(0);
        }
        60% {
            transform: translateX(12px);
        }
        100% {
            transform: translateX(8px);
        }
    }

    @media (max-width: 1024px) {
        .Lid-boms-container {
            grid-template-columns: 1fr;
        }

        .Lid-boms-right {
            margin-top: 0; /* REMOVE fixed spacing */
        }

        .footnote-row .footnote {
            max-width: 100%;
        }
    }

    @media (max-width: 768px) {
        .Lid-boms {
            padding: 3rem 1.25rem;
        }

        .Lid-boms-left h2 {
            text-align: left;
        }

        .chart-wrapper img {
            margin: 0 auto 1.5rem;
        }

        .Lid-boms-right {
            margin-top: 2rem;
        }

        .cta p {
            max-width: 100%;
        }

        .footnote-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .arrow-link {
            align-self: flex-end;
        }
    }

    @media (max-width: 480px) {
        .Lid-boms-left h2 {
            font-size: 28px;
            line-height: 1.25;
        }

        .badge-img {
            width: 150px;
        }

        .cta h4 {
            font-size: 20px;
        }
    }

    /* Cursor */
    .modal-trigger {
        cursor: pointer;
    }
</style>
