---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section class="hero">
  <!-- Background image -->
  <img
    src="/images/Mechanical-Stress-Sequence-banner.jpg"
    alt="PV module testing methodology"
    class="hero-bg"
  />

  <!-- Blue overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <h1>
      {data.mss_hero_titleline1}
      <br />
      <span class="span"
        >{data.mss_hero_titleline2||data.mss_hero_highlight}</span
      >
    </h1>
    <p>
      {data.mss_hero_description}
    </p>
  </div>
</section>
