---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json"; // English
import zh from "../../../i18n/ln-eg.json"; // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section id="PowerDegration" class="Uvid-spotlight">
    <div class="Uvid-container">
        <!-- HEADER -->
        <div class="Uvid-header">
            <div class="Uvid-title">
                <h2>
                    {data.uvid_power_line1}<br />
                    <span
                        >{
                            data.uvid_power_line2 || data.uvid_power_highlight
                        }</span
                    >
                </h2>
            </div>

            <div class="Uvid-description">
                <p>
                    {data.uvid_power_description}
                </p>
            </div>
        </div>

        <div class="Uvid-cards">
            <div class="Uvid-card">
                <div class="Uvid-card-image">
                    <img
                        src="/images/UvidPower.jpg"
                        alt={data.uvid_power_alt}
                        class="modal-trigger"
                    />
                </div>

                <p class="Uvid-card-caption">
                    {data.uvid_power_caption}
                </p>
            </div>
        </div>

        <a href={data.uvid_power_text1_url} target="_blank" class="text-link">
            {data.uvid_power_text1}
        </a>

        <div class="footnote-row">
            <a
                class="footnote"
                href="https://www.kiwa.com/pvel/pqp/uvid"
                target="_blank"
            >
                {data.uvid_power_text2}
            </a>

            <img class="cta-arrow" src="/images/Icon_Arrow_Black.svg" />
        </div>
    </div>
</section>

<style>
    /* =====================
   BASE
===================== */

    .Uvid-spotlight {
        padding: clamp(40px, 6vw, 80px) 20px;
        background: #ffffff;
    }

    .Uvid-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* =====================
   HEADER
===================== */

    .Uvid-header {
        display: grid;
        grid-template-columns: 1fr 1.9fr;
        gap: 40px;
        margin-bottom: clamp(20px, 4vw, 40px);
    }

    .Uvid-title h2 {
        font-size: 46.8px;
        line-height: 57.8px;
        color: #072643;
        margin-bottom: 2rem;
        font-family: "Azo Sans" sans-serif;
        font-weight: 400;
        text-align: left;
        letter-spacing: -1.5px;
    }

    .Uvid-title span {
        font-weight: 700;
        font-style: italic;
        font-family: "Azo Sans" sans-serif;
    }

    .Uvid-description p {
        font-size: 16px;
        line-height: 1.75;
        color: #072643;
        font-family: "Work Sans", sans-serif;
        letter-spacing: 0.01em;
    }

    .Uvid-cards {
        display: flex;
        justify-content: center;
        margin-bottom: 12px;
    }

    .Uvid-card {
        width: 100%;
        max-width: 1200px;
        text-align: center;
    }

    .Uvid-card-image {
        display: flex;
        justify-content: center;
        margin-bottom: 12px;
    }

    .Uvid-card-image img {
        width: 100%;
        max-width: 720px;
        height: auto;
        border-radius: 4px;
    }

    .Uvid-card-caption {
        font-size: 12px;
        line-height: 18px;
        color: #072643;
        max-width: 720px;
        margin: 0 auto;
        font-family: "Work Sans", sans-serif;
        font-weight: 400;
    }

    .text-link {
        color: #072643;
        text-decoration: none;
        font-style: italic;
        font-weight: 400;
        font-size: 14px;
        font-family: "Work Sans", sans-serif;
        margin-top: 20px;

        line-height: 21px;
        padding-bottom: 4px;
        /* underline using background */
        background-image: linear-gradient(#072643, #072643);
        background-repeat: no-repeat;
        background-size: 100% 1.5px;
        background-position: 100% 100%;

        transition: background-size 0.4s ease;
    }

    /* hover: underline disappears left â†’ right */
    .text-link:hover {
        background-size: 0% 1.5px;
    }

    .footnote-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 16px;
        margin-top: 20px;
    }

    .footnote-row .footnote {
        font-size: 14px;

        line-height: 18px;
        letter-spacing: normal;
        font-family: "Work Sans", sans-serif;
        color: #072643;
        text-decoration: none;
        position: relative;
        display: inline-block;
        text-align: left;
        max-width: 90%;
    }

    /* Keep arrow size fixed */
    .footnote-row img.cta-arrow {
        width: 60px; /* keep original size */
        height: auto;
        transition: transform 0.3s ease;
    }

    /* Slide on hover */
    .footnote-row:hover img.cta-arrow {
        transform: translateX(8px);
    }

    /* Click feedback */
    .footnote-row:active img.cta-arrow {
        transform: translateX(12px);
    }

    @keyframes arrowSlide {
        0% {
            transform: translateX(0);
        }
        60% {
            transform: translateX(12px);
        }
        100% {
            transform: translateX(8px);
        }
    }

    /* =====================
   RESPONSIVE
===================== */

    @media (max-width: 1024px) {
        .Uvid-header {
            grid-template-columns: 1fr;
            gap: 24px;
            text-align: left;
        }
    }

    @media (max-width: 600px) {
        .Uvid-card-image img {
            max-width: 100%;
        }

        .Uvid-card-caption {
            font-size: 13px;
        }

        .footnote-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .arrow-link {
            align-self: flex-end;
        }
    }

    /* Cursor */
    .modal-trigger {
        cursor: pointer;
    }
</style>
