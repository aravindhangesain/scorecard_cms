---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section class="hero">
  <!-- Background image -->
  <img src="/images/UvidBanner.jpg" alt={data.uvid_hero_alt} class="hero-bg" />

  <!-- Blue overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <h1>
      {data.uvid_hero_line1}<br />
      <span class="span"
        >{data.uvid_hero_line2 || data.uvid_hero_highlight}</span
      >
    </h1>
    <p>
      {data.uvid_hero_description}
    </p>
  </div>
</section>
