---
import { getLang } from "../../../i18n/useLang";
import en from "../../../i18n/ln.json";      // English
import zh from "../../../i18n/ln-eg.json";   // Chinese

const lang = getLang(Astro);
const data = lang === "zh" ? zh : en;
---

<section id="TestSpotlight" class="dh-spotlight">
  <div class="dh-container">
    <!-- HEADER -->
    <div class="dh-header">
      <div class="dh-title">
        <h2>
          {data.uvid_spotlight_line1}<br />
          <span style="font-style:italic"
            >{data.uvid_spotlight_line2 || data.uvid_spotlight_highlight}</span
          >
        </h2>
      </div>

      <div class="dh-description">
        <p>
          {data.uvid_spotlight_description}
        </p>
      </div>
    </div>
    <div class="dh-cards">
      <div class="dh-card">
        <div class="dh-card-header">
          <h3>{data.label1}</h3>
        </div>
        <div class="dh-card-image">
          <img
            src="/images/UVID-1.png"
            alt={data.uvid_spotlight_alt1}
            class="modal-trigger"
          />
        </div>
      </div>

      <div class="dh-card">
        <div class="dh-card-header">
          <h3>{data.label2}</h3>
        </div>
        <div class="dh-card-image">
          <img
            src="/images/UVID-2.png"
            alt={data.uvid_spotlight_alt2}
            class="modal-trigger"
          />
        </div>
      </div>

      <div class="dh-card">
        <div class="dh-card-header">
          <h3>{data.label3}</h3>
        </div>
        <div class="dh-card-image">
          <img
            src="/images/UVID-3.webp"
            alt={data.uvid_spotlight_alt3}
            class="modal-trigger"
          />
        </div>
      </div>

      <div class="dh-card">
        <div class="dh-card-header">
          <h3>{data.label4}</h3>
        </div>
        <div class="dh-card-image">
          <img
            src="/images/UVID-4.png"
            alt={data.uvid_spotlight_alt4}
            class="modal-trigger"
          />
        </div>
      </div>
    </div>

    <div class="uvid-footnote">
      {data.uvid_spotlight_footnote}
    </div>
  </div>

  <style>
    .dh-spotlight {
      padding: clamp(40px, 6vw, 80px) 20px;
      background: #ffffff;
    }

    .dh-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .dh-header {
      display: grid;
      grid-template-columns: 1fr 1.9fr;
      gap: 40px;
      margin-bottom: clamp(40px, 6vw, 80px);
    }

    .dh-title h2 {
      font-size: clamp(32px, 4.5vw, 48px);
      line-height: 1.2;
      color: #072643;
      font-family: "Azo Sans" sans-serif;
      font-weight: 400;
    }

    .dh-title span {
      font-weight: 700;
      font-family: "Azo Sans" sans-serif;
      font-style: italic;
    }

    .dh-description p {
      font-size: clamp(15px, 2vw, 16px);
      line-height: 1.8;
      color: #072643;
      font-family: "Work Sans", sans-serif;
      letter-spacing: 0.01em;
      font-weight: 400;
    }

    .dh-cards {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 24px;
      max-width: 100%;
      margin-bottom: 40px;
    }

    .dh-card {
      border: 1px solid #dcdcdc;
      background: #ffffff;
      display: flex;
      flex-direction: column;
      height: 100%;
    }

    /* Card Header */
    .dh-card-header {
      background: #0a2b4f;
      color: #ffffff;
      padding: 16px;
      min-height: 60px;
      display: flex;
      align-items: center;
    }

    .dh-card-header h3 {
      font-size: clamp(18px, 2.5vw, 20px);
      font-weight: 400;
      margin-bottom: 10px;
      text-align: left;
      font-family: "Azo Sans" sans-serif;
    }

    .dh-card-header p {
      font-size: clamp(13px, 1.8vw, 16px);
      line-height: 1.6;
      letter-spacing: 0.01em;
      text-align: left;
      font-family: "Azo Sans" sans-serif;
    }

    .dh-card-image {
      flex-grow: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #ffffff;
    }

    .dh-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .uvid-footnote {
      background: #072643;
      color: #ffffff;
      padding: 24px 28px;
      font-size: 16px;
      line-height: 1.6;
      text-align: left;
      max-width: 100%;
      font-family: "Work Sans" sans-serif;
    }

    @media (max-width: 1024px) {
      .dh-header {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .dh-cards {
        grid-template-columns: repeat(2, 1fr);
        max-width: 100%;
      }

      .dh-card-header {
        min-height: 140px;
      }
    }

    @media (max-width: 768px) {
      .dh-header {
        text-align: left;
      }

      .dh-cards {
        grid-template-columns: 1fr;
        gap: 24px;
      }

      .dh-card-header {
        min-height: auto;
        padding: 20px 16px;
      }
    }

    @media (max-width: 480px) {
      .dh-title h2 {
        font-size: 28px;
      }

      .dh-description p {
        font-size: 14px;
      }
    }

    @media (max-width: 1024px) {
      .dh-cards {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .dh-cards {
        grid-template-columns: 1fr;
      }

      .uvid-footnote {
        font-size: 14px;
        padding: 20px;
      }
    }

    /* Cursor */
    .modal-trigger {
      cursor: pointer;
    }
  </style>
</section>
