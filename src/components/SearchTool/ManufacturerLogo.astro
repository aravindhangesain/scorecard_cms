const logoPath = manufacturerLogos[manufacturer];
---

{logoPath ? (
    <img 
        src={logoPath} 
        alt={`${manufacturer} logo`}
        class="brand-logo"
    />
) : (
    <span>{manufacturer}</span> 
)}

<style>
    .brand-logo {
        height: 48px; 
        width: auto;
        object-fit: contain;
    }
</style>