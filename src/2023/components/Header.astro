const currentPath = normalize(Astro.url.pathname);

const isActive = (path) => currentPath === normalize(path);

const isTestsActive =
  currentPath.startsWith("/thermalcycling") ||
  currentPath.startsWith("/dampheat") ||
  currentPath.startsWith("/mechanicalstresssequence") ||
  currentPath.startsWith("/pid") ||
  currentPath.startsWith("/lidletid") ||
  currentPath.startsWith("/pan-performance") ||
  currentPath.startsWith("/hailstresssequence") ||
  currentPath.startsWith("/bds") ||
  currentPath.startsWith("/failure");

const isTopPerformersActive =
  currentPath.startsWith("/searchtool") ||
  currentPath.startsWith("/manufacturers");
