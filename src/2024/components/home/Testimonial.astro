---

<section class="testimonials">
    {
        testimonials.map((t) => (
            <article class="card" style={`--bg:url(${t.bg})`}>
                <p class="quote">“{t.text}”</p>

                <div class="author">
                    <strong>{t.name}</strong>
                    <span>{t.role}</span>
                </div>
            </article>
        ))
    }
</section>

<style>
    .testimonials {
        display: grid;
        width: 1200px;
        margin: 0 auto;
        grid-template-columns: repeat(2, 1fr);
        gap: 40px;
        padding: 80px 40px;
        background: #f4f9fc;
    }

    .card {
        position: relative;
        padding: 48px;
        color: #fff;
        background:
            linear-gradient(rgba(0, 90, 160, 0.9), rgba(0, 90, 160, 0.9)),
            var(--bg) center / cover no-repeat;
        clip-path: polygon(0 0, 95% 0, 100% 10%, 100% 100%, 0 100%);
        height: 50vh;
    }

    .quote {
        font-size: 16px;
        line-height: 1.7;
        margin-bottom: 40px;
        color: #ffffff;
    }

    .author strong {
        display: block;
        font-size: 15px;
        margin-bottom: 6px;

    }

    .author span {
        font-size: 13px;
        opacity: 0.9;
    }

    /* Responsive */
    @media (max-width: 900px) {
        .testimonials {
            grid-template-columns: 1fr;
            padding: 40px 20px;
        }
    }
</style>
